# ======================================
# PERFORMANCE OPTIMIZED CONFIGURATION
# ======================================

# SERVER CONFIGURATION
NODE_ENV=production
PORT=3001

# DATABASE CONFIGURATION (MongoDB)
MONGODB_URI=mongodb://localhost:27017/medidor
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5

# JWT CONFIGURATION
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# EMAIL CONFIGURATION
EMAIL_PROVIDER=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Sistema de Seguimiento <noreply@sistema.com>
EMAIL_FROM_NAME=Sistema de Seguimiento
SUPPORT_EMAIL=soporte@sistema.com
COMPANY_NAME=Sistema de Seguimiento de Docentes

# FRONTEND CONFIGURATION
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173

# FILE UPLOAD CONFIGURATION
MAX_FILE_SIZE=5242880
MAX_FILES_COUNT=3
UPLOAD_PATH=./uploads

# PERFORMANCE SETTINGS
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_HELMET=true

# RATE LIMITING
GENERAL_RATE_LIMIT=100
AUTH_RATE_LIMIT=5
RATE_WINDOW_MS=900000

# CACHE CONFIGURATION (Redis - optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# MONITORING AND LOGGING
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_TRACKING=true

# SMTP CONFIGURATION (Alternative to Gmail)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false

# ======================================
# PRODUCTION ONLY SETTINGS
# ======================================

# Enable these in production for better performance
# ENABLE_CLUSTERING=true
# CLUSTER_WORKERS=4
# ENABLE_MEMORY_MONITORING=true
# ENABLE_PM2_MONITORING=true
